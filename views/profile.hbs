{{#with user}}
<h1> {{name}}</h1>
<img src="{{profilePic}}">
{{/with}}
<br />
<a href="/profile/edit">Edit my profile</a>
<br />
<a href="/objectives">Create new goal</a>
<br />
<br />
{{#each objective}}
<section style="border: solid 3px; width:600px; color: grey; padding: 10px">
  <h2>Problem: {{this.problem}}</h2>
  <h2>Category: {{this.category}}</h2>
  <h2>Goal: {{this.objectiveInput}}</h2>
  <h2>End Date: {{this.objectiveEndDate}}</h2>
  <h2>Result: {{this.keyResult}}</h2>
  {{#each action}}
  <section style="border: solid 3px; width:400px; color: grey; padding: 10px">
    <h2>Action: {{this.action}}</h2>
    <a href="/actions/delete/{{this._id}}">Delete Action</a>
    <br />
    <a href="/actions/edit/{{this._id}}">Edit Action</a>
    <br />
  </section>
  {{/each}}
  <br />
  <br />
  <a href="/objectives/delete/{{this._id}}">Delete the Problem</a>
  <br />
  <br />
  <a href="/objectives/edit/{{this._id}}">Edit the Problem</a>
  <br />
  <br />
  <a href="/actions/new-action/{{this._id}}">Create New action</a>



  <br />
</section>
{{/each}}