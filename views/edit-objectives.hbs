<h1> welcome {{user.name}} to the edit page of {{obj.problem}}</h1>

<a href="/profile">Go to my profile</a>

<br />
<br />
{{#with obj}}


<form method="POST" action="/objectives/edit/{{objectiveId}}/update">

  <br>
  <label>Problem</label>
  <input name="problem" value="{{problem}}">

  <br>
  <label for="">objectiveEndDate</label>
  <input type="date" name="objectiveEndDate" value={{objectiveEndDate}}>
  <br>
  <label for="">objectiveInput</label>
  <input name="objectiveInput" value="{{objectiveInput}}">
  <br>
  <label for="">keyResult</label>
  <input name="keyResult" value="{{keyResult}}">
  <br>
  <label for="">category</label>
  <select name="category" id="category">
    <option value="{{currentObjCategory}}" selected>{{currentObjCategory}}</option>
    {{#each categories}}
    <option value="{{this}}">{{this}}</option>
    {{/each}}
  </select>
  <br>
  <label for="">Status</label>
  <select name="status" id="status">
    <option value="{{currentStatus}}" selected>{{currentStatus}}</option>
    {{#each statusList}}
    <option value="{{this}}">{{this}}</option>
    {{/each}}
  </select>

  <button type="submit">Edit your objective</button>
</form>

<br />
<a href="/actions/{{this._id}}">Create the actions you need to achieve your goal!</a>
<br />

{{/with}}