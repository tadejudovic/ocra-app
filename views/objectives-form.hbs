<form action="/objectives/new-objective" method="POST">
  <input type="text" name="problem" placeholder="Describe the problem you want to solve">
  <select name="category" id="">
    <option value="Financial">Financial</option>
    <option value="Career">Career or Passion</option>
    <option value="Relationship">Relationships</option>
    <option value="Wellbeing">Wellbeing</option>

  </select>

  <input type="text" name="objectiveInput" placeholder="Describe the change you want to see">
  <input type="text" name="keyResult" placeholder="Provide one key results ">

